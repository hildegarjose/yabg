version: '3.1'

services:
  wordpress:
    container_name: <%- name %>_wp
    build: .
    depends_on:
      - db
    restart: always
    ports:
      - 8080:80
      - 3000:3000 # Only for dev
    environment:
      WORDPRESS_DB_HOST: db
      WORDPRESS_DB_USER: "${DB_USER}"
      WORDPRESS_DB_PASSWORD: "${DB_PASSWORD}"
      WORDPRESS_DB_NAME: "${DB_NAME}"
      VIRTUAL_HOST: "<%- name %>.local"
    volumes:
      - ./wordpress:/var/www/html
  phpmyadmin:
    container_name: <%- name %>_dbAdmin
    image: phpmyadmin/phpmyadmin:latest
    depends_on:
      - db
    restart: always
    ports:
      - 8081:80
    environment:
      PMA_HOST: db
      MYSQL_ROOT_PASSWORD: "${DB_ROOT_PASSWORD}"
  db:
    container_name: <%- name %>_db
    image: mysql:latest
    restart: always
    environment:
      MYSQL_DATABASE: "${DB_NAME}"
      MYSQL_USER: "${DB_USER}"
      MYSQL_PASSWORD: "${DB_PASSWORD}"
      MYSQL_ROOT_PASSWORD: "${DB_ROOT_PASSWORD}"
    volumes:
      - db:/var/lib/mysql
  proxy:
    container_name: <%- name %>_db
    image: jwilder/nginx-proxy:latest
    depends_on:
      - wordpress
    restart: always
    ports:
      - 80:80
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro

volumes:
  db:
